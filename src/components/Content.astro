---
import {
    Card,
    CardContent
} from '@/components/ui/card'
import {
    Linkedin,
    Github,

} from 'lucide-react'
---
<div class="flex flex-col items-center justify-center w-full max-w-sm md:max-w-6xl gap-2 min-h-screen">
    <div class="flex flex-col md:flex-row justify-center gap-2 md:h-[75vh]">
        <div class="flex flex-col md:w-2/3 gap-2">
            <Card className="h-1/2">
                <CardContent className="h-full">
                    <div class="flex flex-col justify-between h-full">
                        <p>I am a software developer who currently focuses on webdev and user-experience.</p>
                        <div class="flex flex-row">
                            <Linkedin href="https://www.linkedin.com/in/fangxingliu/"/>
                            <Github href="https://github.com/Fangoling"/>
                        </div>
                    </div>
                </CardContent>
            </Card>
            <div class="flex flex-col md:flex-row w-full gap-2 h-1/2">
                <Card className="w-full md:w-1/3">
                    <CardContent>
                        Box 2
                    </CardContent>
                </Card>
                <div class="flex flex-col w-full gap-2">
                    <Card className="w-full h-1/2">
                        <CardContent className='flex items-center justify-center h-full'>
                            <h1>Projects</h1>
                        </CardContent>
                    </Card>
                    <Card className="w-full h-1/2">
                        <CardContent>
                            Box 4
                        </CardContent>
                    </Card>

                </div>
            </div>
        </div>
        <div class="md:w-1/3 gap-2 flex flex-col">
            <Card className="h-3/4">
                <CardContent className="h-full mt-2">
                    <h3>About me</h3>
                    <p>Technologies I currenlty use:</p>
                    <ul class="ml-6 list-disc">
                        <li>Typescript</li>
                        <li>Python</li>
                        <li>Java</li>
                        <li>NextJS</li>
                        <li>React</li>
                    </ul>
                    <p>Beyond coding, I'm also passionate about swimming and doing calisthenics.
                        Another Hobby of mine is collecting and reading comics</p>
                </CardContent>
            </Card>
            <Card className="h-1/4">
                <CardContent>
                    <p>Box 5</p>
                </CardContent>
            </Card>
        </div>
    </div>
</div>